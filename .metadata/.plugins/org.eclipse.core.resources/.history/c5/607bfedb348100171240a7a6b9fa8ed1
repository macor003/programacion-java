package com.macor.CodeWars;

import java.util.Arrays;
import java.util.*;
import java.util.List;

public class SumConsecutives {

	public static void main(String[] args) {

		List<Integer> list = Arrays.asList(1, 4, 3, 4, 5);

		List<Integer> resultado = new ArrayList<Integer>();
		int sum = 0;

		for (int i = 0; i < list.size() - 1; i++) {
			System.out.print(i);
			if (list.get(i) == list.get(i + 1)) {
				sum = (list.get(i) + list.get(i + 1));
				resultado.add(i, sum);
				resultado.remove(i);
			} else {
				resultado.add(i, list.get(i));
			}
			System.out.println(resultado);

			// int sum = list.get(i) == list.get(i + 1) ? (list.get(i + 1) + list.get(i +
			// 1)) : list.get(i);

			// resultado.add(i,sum);

		}
		// System.out.println(resultado.get(2));

	}

}
