<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PrincipalEventHandler</servlet-name>
        <servlet-class>com.venvidrio.sms.event.PrincipalEventHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.venvidrio.sms.event.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>smsLogin</servlet-name>
        <servlet-class>com.venvidrio.sms.servlet.smsLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarEnvioEventHandler</servlet-name>
        <servlet-class>com.venvidrio.sms.event.GuardarEnvioEventHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrincipalEventHandler</servlet-name>
        <url-pattern>/PrincipalEventHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>smsLogin</servlet-name>
        <url-pattern>/smsLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarEnvioEventHandler</servlet-name>
        <url-pattern>/GuardarEnvioEventHandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
